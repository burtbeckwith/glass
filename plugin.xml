      <dependency group='com.google.guava' name='guava' version='14.0.1' />
      <dependency group='com.sun.mail' name='javax.mail' version='1.5.0' />
      <dependency group='com.google.apis' name='google-api-services-oauth2' version='v1-rev33-1.14.1-beta' />
      <dependency group='com.google.http-client' name='google-http-client-jackson' version='1.14.1-beta' />
      <dependency group='org.apache.activemq' name='activemq-core' version='5.3.0' />
      <dependency group='org.codehaus.jackson' name='jackson-mapper-asl' version='1.9.11' />
    </compile>
  </dependencies>
  <plugins>
    <compile>
      <plugin group='org.grails.plugins' name='quartz' version='1.0-RC8' />
      <plugin group='org.grails.plugins' name='plugin-config' version='0.1.8' />
    </compile>
    <runtime>
      <plugin group='org.grails.plugins' name='hibernate' version='2.2.2' />
    </runtime>
  </plugins>
  <runtimePluginRequirements>
    <plugin name='plugin-config' version='0.1.8' />
    <plugin name='quartz' version='1.0-RC8' />
  </runtimePluginRequirements>
  <behavior />
