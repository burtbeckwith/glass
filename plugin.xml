<plugin name='glass' version='0.1' grailsVersion='2.2 &gt; *'>
  <author>Your name</author>
  <title>Glass Plugin</title>
  <description>Brief summary/description of the plugin.
</description>
  <documentation>http://glass.org/plugin/glass</documentation>
  <type>GlassGrailsPlugin</type>
  <resources>
    <resource>GlassDefaultConfig</resource>
    <resource>spring.resources</resource>
    <resource>org.seethrough.glass.AuthController</resource>
    <resource>org.seethrough.glass.NotifyController</resource>
    <resource>org.seethrough.glass.User</resource>
    <resource>org.seethrough.glass.UserCredential</resource>
    <resource>org.seethrough.glass.MailJob</resource>
    <resource>org.seethrough.glass.AuthorisationService</resource>
    <resource>org.seethrough.glass.MailService</resource>
    <resource>org.seethrough.glass.NotifyService</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='org.codehaus.jackson' name='jackson-core-asl' version='1.9.11' />
      <dependency group='com.google.api-client' name='google-api-client' version='1.14.1-beta' />
      <dependency group='com.google.apis' name='google-api-services-mirror' version='v1-rev2-1.14.1-beta' />
